{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "GitInspectorGUI (Development Mode)",
  "version": "0.1.0",
  "identifier": "com.gitinspectorgui.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GitInspectorGUI (Development Mode)",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../python": "./"
    },
    "copyright": "Copyright Â© 2025 GitInspectorGUI. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Modern git repository analysis tool",
    "longDescription": "GitInspectorGUI is a modern desktop application for comprehensive git repository analysis, providing detailed statistics, blame information, and interactive data visualization.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "digestAlgorithm": "sha256"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://gitlab.com/api/v4/projects/{{project_id}}/releases/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJGN0UzNzQyNzQ2MjY5NzQKUldSWTRKaFRuVGhHWVRoMzJnRjNVVlZHWVRoMzJnRjNVVlZHWVRoMzJnRjNVVlZHWVRoMzJnRjNVVlY="
    }
  }
}