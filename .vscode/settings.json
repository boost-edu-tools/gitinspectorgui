{
    "cSpell.enabled": true,
    "cSpell.import": [
        "../../dev-config/cspell.json"
    ],
    //
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.addMissingImports": "always",
        "source.organizeImports": "never",
        "source.fixAll.eslint": "explicit"
    },
    "editor.detectIndentation": false,
    //
    // Controls how the editor should render whitespace characters.
    //  - none
    //  - boundary: Render whitespace characters except for single spaces between words.
    //  - selection: Render whitespace characters only on selected text.
    //  - trailing: Render only trailing whitespace characters.
    //  - all
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        88,
    ],
    "evenBetterToml.semanticTokens": false,
    "evenBetterToml.schema.enabled": false,
    //
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    //
    "github.copilot.editor.enableCodeActions": false,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    //
    "prettier.enable": true,
    "prettier.tabWidth": 4,
    //
    "python.analysis.aiCodeActions": {
        "generateDocstring": true
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.exclude": [
        "**/.venv/**"
    ],
    "python.analysis.indexing": true,
    "python.analysis.inlayHints.callArgumentNames": "off",
    // "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.variableTypes": false,
    //
    // Error: basic info and errors
    // Warning: = Error + warnings
    // Information: = Warning + execution times and return info etc (Default)
    // Trace: = Information + ?????
    "python.analysis.logLevel": "Information",
    "python.analysis.typeCheckingMode": "standard",
    "python.languageServer": "Pylance",
    //
    "python.testing.pytestEnabled": true,
    "python.terminal.activateEnvInCurrentTerminal": false,
    "python.terminal.activateEnvironment": false,
    //
    //
    "rewrap.autoWrap.enabled": true,
    // Puts a single space between comment character "//" and comment text
    "rewrap.reformat": true,
    //
    // Note: no Cline equivalent for this setting
    "roo-cline.allowedCommands": [
        "npm test",
        "npm install",
        "tsc",
        "git log",
        "git diff",
        "git show"
    ],
    //
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.rulers": [
            80,
            88
        ],
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.addMissingImports": "always",
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
